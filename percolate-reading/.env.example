# =============================================================================
# Percolate-Reading Configuration
# Copy to .env and populate with your values
# =============================================================================

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
PERCOLATE_READING_HOST=0.0.0.0
PERCOLATE_READING_PORT=8001
PERCOLATE_READING_RELOAD=false
PERCOLATE_READING_WORKERS=4

# -----------------------------------------------------------------------------
# Storage
# -----------------------------------------------------------------------------
PERCOLATE_READING_STORAGE_PATH=.fs/parse-jobs
PERCOLATE_READING_DB_PATH=.fs/reader-db

# -----------------------------------------------------------------------------
# Authentication (optional)
# -----------------------------------------------------------------------------
PERCOLATE_READING_AUTH_ENABLED=false
PERCOLATE_READING_API_TOKEN=

# -----------------------------------------------------------------------------
# Models
# -----------------------------------------------------------------------------
PERCOLATE_READING_EMBEDDING_MODEL=nomic-embed-text-v1.5
PERCOLATE_READING_WHISPER_MODEL=base
PERCOLATE_READING_DEVICE=cpu  # cpu | cuda | mps

# -----------------------------------------------------------------------------
# Model Cache
# -----------------------------------------------------------------------------
PERCOLATE_READING_MODEL_CACHE_DIR=/var/cache/percolate-reading/models
PERCOLATE_READING_MAX_FILE_SIZE_MB=100
PERCOLATE_READING_MAX_BATCH_SIZE=100

# -----------------------------------------------------------------------------
# LLM Providers (for visual verification)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# S3/Minio (for cloud gateway mode)
# -----------------------------------------------------------------------------
PERCOLATE_READING_S3_ENABLED=false
PERCOLATE_READING_S3_ENDPOINT=http://localhost:9000
PERCOLATE_READING_S3_ACCESS_KEY=minioadmin
PERCOLATE_READING_S3_SECRET_KEY=minioadmin
PERCOLATE_READING_S3_BUCKET=percolate-files
PERCOLATE_READING_S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# NATS (for cloud gateway mode)
# -----------------------------------------------------------------------------
PERCOLATE_READING_NATS_ENABLED=false
PERCOLATE_READING_NATS_URL=nats://localhost:4222
PERCOLATE_READING_NATS_QUEUE_SUBJECT=percolate.jobs

# -----------------------------------------------------------------------------
# Gateway Mode
# -----------------------------------------------------------------------------
PERCOLATE_READING_GATEWAY_MODE=false

# -----------------------------------------------------------------------------
# OpenTelemetry
# -----------------------------------------------------------------------------
PERCOLATE_READING_OTEL_ENABLED=false
PERCOLATE_READING_OTEL_ENDPOINT=http://localhost:4318
PERCOLATE_READING_OTEL_SERVICE_NAME=percolate-reading
